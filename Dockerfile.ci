# CI Testing Environment - Replicates GitHub Actions
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -

# Add Poetry to PATH
ENV PATH="/root/.local/bin:${PATH}"

# Set working directory
WORKDIR /app

# Copy project files (src-layout structure)
COPY pyproject.toml poetry.lock ./
COPY README.md CLAUDE.md ./
COPY src ./src
COPY tests ./tests
COPY conftest.py pytest.ini pytest-ci.ini ./
COPY dev ./dev
COPY scripts ./scripts

# Install dependencies
RUN poetry config virtualenvs.create false && \
    poetry install --with dev,docs,api --no-interaction

# Set environment variables to match CI
ENV LANGFUSE_ENABLED=false
ENV DATABASE_URL="sqlite+aiosqlite:///./test.db"
ENV PYTHONPATH=/app/src:$PYTHONPATH

# Default command - run tests with CI configuration
CMD ["poetry", "run", "pytest", "-c", "pytest-ci.ini", "--cov=src", "--cov-report=term-missing"]